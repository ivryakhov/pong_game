module PongModel (..) where


type alias Input =
  { space : Bool
  , paddle1 : Int
  , paddle2 : Int
  , delta : Time
  }

type alias Object a =
  { a |
        x : Float,
        y : Float,
        vx : Float,
        vy : Float
  }

type alias Ball =
  Object {}

type alias Player =
  Object { score : Int }
